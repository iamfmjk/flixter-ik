<br />

<div class="form-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />
  <% @courses.each do |course| %>
    <h2 class="text-center course-header">
      <%= link_to course.title, course_path(course) %>
    </h2>
    <br />
    <%= image_tag(course.image.to_s, class: 'img-fluid mx-auto d-block') %>
    <br />
    <div class="col-sm-10 mx-auto course-info">
      <div class="row">
      <div class="col-sm-8 col-12">
        <%= course.description %>
      </div>
      <div class="col-sm-4 col-12 text-right">
        <%= link_to 'More details...', course_path(course), class: 'btn btn-primary btn-large' %>
      </div>
      </div>
    </div>
    <br class="clr" />
  <% end %>
</div>
